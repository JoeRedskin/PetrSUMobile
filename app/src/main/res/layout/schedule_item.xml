<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/cards_view_schedule"
            app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewScheduleNumber"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewScheduleTime"
                    app:layout_constraintStart_toEndOf="@+id/textViewScheduleNumber" android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewScheduleType"
                    app:layout_constraintStart_toEndOf="@+id/textViewScheduleTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp" android:layout_marginStart="60dp" android:textAlignment="textEnd"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="30dp" android:id="@+id/textViewScheduleName"
                    app:layout_constraintTop_toBottomOf="@+id/textViewScheduleNumber"
                    android:layout_marginTop="13dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewScheduleClassroom"
                    android:layout_marginEnd="2dp" android:textSize="12sp" android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/textViewScheduleLecturer"
                    android:textColor="@color/colorBlack"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewScheduleClassroom"
                    app:layout_constraintStart_toEndOf="@+id/textViewScheduleName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewScheduleType"
                    android:layout_marginTop="13dp" android:layout_marginEnd="16dp" android:layout_marginStart="2dp"
                    android:textSize="12sp" android:textColor="@color/colorBlack"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewScheduleLecturer"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/view2"
                    android:background="@color/colorBlackMedium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>